{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@completium/completium-cli": "^1.0.23",
    "@completium/experiment-ts": "^1.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "mocha": "^10.4.0",
    "ts-mocha": "^10.0.0"
  },
  "scripts": {
    "s:start": "docker run --rm --name archetype-sandbox --detach -p 20000:20000 -e block_time=3 -e flextesa_node_cors_origin=\"*\" oxheadalpha/flextesa:latest nairobibox start && yarn run s:show-keys",
    "s:show-keys" : "docker exec archetype-sandbox nairobibox info",
    "s:stop": "docker stop archetype-sandbox",
    "test-bind": "npx completium-cli generate binding-ts * --input-path ./contracts --output-path ./tests/bindings",
    "test-only": "npx ts-mocha 'tests/**/*.ts' --timeout 0 --bail",
    "dapp-bind": "npx completium-cli generate binding-dapp-ts * --input-path ./contracts --output-path ../frontend/contract-bindings",
    "test": "yarn run test-bind && yarn run test-only",
    "s:deploy": "./scripts/deploy_and_update_vite_env.sh sandbox && yarn dapp-bind",
    "g:deploy": "./scripts/deploy_and_update_vite_env.sh ghost && yarn dapp-bind",
    "main:deploy": "./scripts/deploy_and_update_vite_env.sh main && yarn dapp-bind"
  }
}
